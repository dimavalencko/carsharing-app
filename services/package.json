{
  "name": "carsharing",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:all": "concurrently \"npm:dev:*\"",
    "dev:gateway": "npm run start:dev --workspace=services/api-gateway",
    "dev:identity": "npm run start:dev --workspace=services/identity-service",
    "dev:auth": "npm run start:dev --workspace=services/auth-service",
    "dev:user": "npm run start:dev --workspace=services/user-service",
    "dev:order": "npm run start:dev --workspace=services/order-service",
    
    "install:all": "npm install --workspaces",
    "build:all": "npm run build --workspaces"
  },
  "workspaces": [
    "services/*"
  ],
  "devDependencies": {
    "@nestjs/cli": "^10.0.0"
  }
}